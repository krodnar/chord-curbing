<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox minHeight="600.0" minWidth="1000.0" prefHeight="800.0" prefWidth="1280.0" spacing="8.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fx:id="pickerRoot" />
      <HBox>
         <children>
            <HBox fx:id="inversionsRoot" />
            <Pane HBox.hgrow="SOMETIMES" />
            <HBox fx:id="tonicsRoot" />
         </children>
      </HBox>
      <HBox fx:id="pickerModeRoot" />
      <HBox>
         <children>
            <VBox>
               <children>
                  <Label text="Tonalities" />
                  <VBox fx:id="tonalitiesRoot" />
               </children>
            </VBox>
            <Pane HBox.hgrow="SOMETIMES" />
            <VBox>
               <children>
                  <Label text="Degrees" />
                  <VBox fx:id="degreesRoot" />
               </children>
            </VBox>
         </children>
      </HBox>
      <VBox fx:id="trainerRoot" />
      <HBox>
         <children>
            <FlowPane fx:id="octavesRangeRoot" />
            <Pane HBox.hgrow="SOMETIMES" />
            <Button fx:id="settingsButton" contentDisplay="CENTER" graphicTextGap="0.0" mnemonicParsing="false">
               <graphic>
                  <ImageView fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/settings.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
   </padding>
</VBox>
